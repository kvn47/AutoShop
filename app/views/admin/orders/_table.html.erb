<table class="table">
  <thead>
  <tr>
    <th><%= Order.human_attribute_name :customer %></th>
    <th><%= Order.human_attribute_name :status %></th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @orders.each do |order| %>
    <tr>
      <td><%= order.customer.presentation %></td>
      <td><%= order_status_name order.status %></td>
      <td><%= link_to t('helpers.show'), [:admin, order] %></td>
      <td><%= link_to t('helpers.edit'), edit_admin_order_path(order) %></td>
      <td><%= link_to t('helpers.destroy'), order, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
  </tbody>
</table>
